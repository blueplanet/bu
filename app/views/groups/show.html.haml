%h1
  = @group.name
%p#notice
  = notice

%p
  = @group.description
%p
  %b Owner:
  = @group.owner.name

.events
  %h2 events
  %p
    = link_to 'New event', "/events/new"
  %ul
    - @group.events.each do |event|
      %li
        = link_to event.title, event
        = '...'
        = event.place
