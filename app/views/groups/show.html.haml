%h1= @group.name
%p#notice= notice

%p
  = @group.description
%p
  %b Owner:
  = @group.owner.name

- is_member = @group.member?(@user)
- unless is_member
  %p= link_to 'この部活に参加する', "#{@group.id}/join"

.events
  %h2 活動スケジュール
  - @events = @group.events.reverse
  = render 'events'

.events_new
  - if is_member
    %p= link_to '新しいスケジュールを追加', "/events/new"

.users
  %h2 部員
  %ul
    - @group.users.each do |user|
      %li
        = user.name
        == ...
        = %w(owner 常連 初参加 幽霊部員).sample
    
.admin
  = link_to 'Edit', edit_group_path(@group)
  /
  = link_to 'Destroy', @group, :confirm => 'Are you sure?', :method => :delete
