%p#notice= notice

%h1= @current_user.name

%table
  %tr
    %td
      = image_tag @current_user.img, :size => '80x80', :class => 'user_icon'
    %td.top
      .twitter
        - if screen_name = @current_user.screen_name
          = link_to "twitter", "https://twitter.com/#!/#{screen_name}"
      .profile
        profile...

%h2=_'Groups'
- @groups = @current_user.groups
= render '/groups/groups'
